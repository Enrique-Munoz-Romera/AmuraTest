@model IEnumerable<AmuraTest.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <form  asp-action="Index" method="post" class="form-group">
        <select class="form-select" aria-label="Default select example" name="TitleSelected">
            <option selected>Select a title</option>
            @foreach (var item in ViewBag.Products)
            {
                <option value="@item.title">@item.title</option>

            }
        </select>
        <input type="submit" value="Search" class="btn btn-success"/>
    </form>
</div>
<div class="mx-auto p-5">
    <table class="table table-hover table-dark align-middle">
        <thead>
            <tr>
                <th>
                    Titulo
                </th>
                <th>
                    Descripción
                </th>
                <th>
                    Precio
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.price)€
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

